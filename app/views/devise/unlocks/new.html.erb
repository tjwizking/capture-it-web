<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :class => "form-control input-lg",autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions" , :class => "btn btn-default", :style=>"float:right; margin:20px;"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
