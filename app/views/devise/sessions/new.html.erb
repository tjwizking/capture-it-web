 <%= devise_error_messages! %>
<div class="col-md-8">
                     <div class="panel panel-default">
                        <div class="panel-heading">
                           <h4>Log in</h4>
                        </div>
                        <div class="panel-body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, :class => "form-group" %><br />
    <%= f.email_field :email, :class => "form-control input-lg", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => "form-control input-lg", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group" style="border:none;">
      <%= f.check_box :remember_me, :class => "form- " %>
      <%= f.label :remember_me, :class => "form- " %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in >" , :class => "btn btn-lg btn-success", :style=>"float:right; margin:20px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
   </div>
 </div>
</div>
